# ===============================
# Server Configuration
# ===============================

# Port on which backend server runs
PORT=8000

# ===============================
# Database Configuration
# ===============================

# MongoDB connection URL
# Example: mongodb://127.0.0.1:27017/IHMSDataBase
MONGO_URL=

# ===============================
# Frontend & Backend URLs
# ===============================

# Frontend URL used for password reset links
# Example (local): http://localhost:5173
RESET_LINK=

# Backend base URL (used for OAuth callbacks, etc.)
# Example (local): http://localhost:8000
CALLBACK_URL=

# ===============================
# Authentication & Security
# ===============================

# Secret key used to sign JWT access tokens
JWT_SECRET=

# Secret key used specifically for password reset tokens
JWT_PASSWORD_RESET_KEY=

# ===============================
# Email Configuration (Nodemailer)
# ===============================

# Company/service email address
EMAIL_COMPANY=

# App password generated from Gmail (NOT normal password)
APP_PASS=

# ===============================
# Cloudinary Configuration
# ===============================

# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=

# Cloudinary API key
CLOUDINARY_API_KEY=

# Cloudinary API secret
CLOUDINARY_API_SECRET=

# ===============================
# Google OAuth Configuration
# ===============================

# Google OAuth client ID
GOOGLE_CLIENT_ID=

# Google OAuth client secret
GOOGLE_CLIENT_SECRET=
